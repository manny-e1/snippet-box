{{template "base" .}}
{{define "title"}}About{{end}}
{{define "main"}}
    <h2>Your Account</h2>
    {{ with .CurrentUser }}
        <table>
            <tr>
                <th>Name</th>
                <td>{{.Name}}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{.Email}}</td>
            </tr>
            <tr>
                <th>Joined</th>
                <td>{{.Created | humanDate}}</td>
            </tr>
        </table>
    {{end}}
{{end}}